sub upload_table {
  my $settings      = shift;
  my $feature_files = shift;

  # start the table.
  my $cTable = start_table({-border=>0,-width=>'100%'})
    . TR(
	 th({-class=>'uploadtitle', -colspan=>4, -align=>'left'},
	    $CONFIG->tr('Upload_title').':',
	    a({-href=>annotation_help(),-target=>'help'},'['.$CONFIG->tr('HELP').']'))
