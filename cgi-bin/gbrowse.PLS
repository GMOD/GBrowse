  my %default_plugin = map {$_=>1} map {s/^plugin:// && $_} 
    grep {/^plugin:/} $CONFIG->default_labels;

  my %listed = map {$_=>1} @{$settings->{tracks}}; # are we already on the list?

  for my $p ($PLUGINS->plugins) {
    next unless $p->type eq 'annotator';
    my $name = $p->name;
    $name = "plugin:$name";
